# Detect all .asm files in src/asm/ as Assembly
src/asm/*.asm linguist-language=Assembly
src/asm/*.asm linguist-detectable

# Detect all .c files in src/asm/ as C
src/asm/*.c linguist-language=C
src/asm/*.c linguist-detectable

# Optional overrides (simplified wildcard syntax)
src/asm/*.asm linguist-generated=false linguist-vendored=false
src/asm/*.c linguist-generated=false linguist-vendored=false